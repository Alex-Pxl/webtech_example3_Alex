// ------------------------------------------------------------
//  MENU PRINTEN
// ------------------------------------------------------------
void toon_menu()
{
    printf("\n");
    printf("=========================================\n");
    printf("           BEEP TESTER  v1.0             \n");
    printf("=========================================\n");
    printf("Kies een test:\n\n");
    printf("  1. Test 1\n");
    printf("  2. Test 2\n");
    printf("  3. Test 3\n");
    printf("  4. Test 4\n");
    printf("  5. Test 5\n");
    printf("  6. Test 6\n");
    printf("  7. Test 7\n");
    printf("  8. Test 8\n");
    printf("  9. Test 9\n");
    printf(" 10. Test 10\n");
    printf("  0. Afsluiten\n\n");
    printf("Maak je keuze: ");
}

// ------------------------------------------------------------
//  MAIN LOOP
// ------------------------------------------------------------
int main(void)
{
    SetConsoleOutputCP(CP_UTF8);

    uint8_t keuze;

    while (1)
    {
        toon_menu();

        if (scanf("%hhu", &keuze) != 1)
        {
            printf("\033[31mOngeldige invoer!\033[0m\n");
            while (getchar() != '\n');
            continue;
        }

        switch (keuze)
        {
            case 1:  beep_test_1(); break;
            case 2:  beep_test_2(); break;
            case 3:  beep_test_3(); break;
            case 4:  beep_test_4(); break;
            case 5:  beep_test_5(); break;
            case 6:  beep_test_6(); break;
            case 7:  beep_test_7(); break;
            case 8:  beep_test_8(); break;
            case 9:  beep_test_9(); break;
            case 10: beep_test_10(); break;

            case 0:
                printf("\n\033[32mProgramma afgesloten.\033[0m\n");
                return 0;

            default:
                printf("\033[31mDeze keuze bestaat niet!\033[0m\n");
                break;
        }

        printf("\nDruk op ENTER om verder te gaan...");
        while (getchar() != '\n');
        getchar();
    }

    return 0;
}

